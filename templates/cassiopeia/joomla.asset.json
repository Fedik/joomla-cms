{
  "$schema": "https://developer.joomla.org/schemas/json-schema/web_assets.json",
  "name": "cassiopeia",
  "version": "4.0.0",
  "description": "Cassiopeia is the Joomla 4 site template",
  "license": "GPL-2.0+",
  "assets": [
    {
      "name": "template.cassiopeia.ltr",
      "type": "stylesheet",
      "uri": "template.min.css"
    },
    {
      "name": "template.cassiopeia.rtl",
      "type": "stylesheet",
      "uri": "template-rtl.min.css"
    },
    {
      "name": "template.cassiopeia.user",
      "type": "stylesheet",
      "uri": "user.css"
    },
    {
      "name": "template.cassiopeia",
      "type": "script",
      "uri": "template.js"
    },
    {
      "name": "template.cassiopeia.user",
      "type": "script",
      "uri":  "user.js"
    },

    {
      "name": "template.cassiopeia.base",
      "type": "group",
      "dependencies": [
        "core",
        "jquery",
        "fontawesome-free",
        "bootstrap.js.bundle",
        "template.cassiopeia#script",
        "template.cassiopeia.user#script"
      ]
    },
    {
      "name": "template.cassiopeia.ltr",
      "type": "group",
      "dependencies": [
        "template.cassiopeia.base",
        "template.cassiopeia.ltr#stylesheet",
        "template.cassiopeia.user#stylesheet"
      ]
    },
    {
      "name": "template.cassiopeia.rtl",
      "type": "group",
      "dependencies": [
        "template.cassiopeia.base",
        "template.cassiopeia.rtl#stylesheet",
        "template.cassiopeia.user#stylesheet"
      ]
    }
  ]
}
